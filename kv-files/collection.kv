#:kivy 1.9.1
#:import C kivy.utils.get_color_from_hex

<Collection>:

    id: collection
    orientation: 'vertical'
    padding: 15

    ## add entry main label
    Label:
        size_hint: 1, None
        size: collection.width, collection.height * 0.15
        halign: 'center'
        text: 'Collection'
        font_size: '30sp'



    ## Search bar
    ##search_input: search_box  CRASH
    ##search_result: search_result  CRASH
    BoxLayout:
        height: "40dp"
        size_hint_y: None

        TextInput:
            id: search_box
            size_hint_x: 75

        Button:
            text: "Search"
            size_hint_x: 25
            background_color: C('#848484')
            on_press: root.search_entry(search_box.text)

    ListView:
        id: search_result
        item_strings: []


