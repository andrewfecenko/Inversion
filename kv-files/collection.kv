#:kivy 1.9.1
#:import C kivy.utils.get_color_from_hex

<Collection>:
    canvas.before:
        Color:
            rgba: 24,24,24,1

    id: collection
    orientation: 'vertical'
    padding: 15

    ## add entry main label
    Label:
        size_hint: 1, None
        size: collection.width, collection.height * 0.08
        halign: 'center'
        text: "Collection"
        font_size: '23sp'


    BoxLayout:
        height: "40dp"
        size_hint_y: None

        TextInput:
            id: search_box
            size_hint_x: 75

        Button:
            text: "Search"
            size_hint_x: 25
            background_color: C('#848484')
            on_press: root.search_entry(search_box.text)

