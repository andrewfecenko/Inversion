#:kivy 1.9.1
#:import C kivy.utils.get_color_from_hex

<Collection>:
    canvas.before:
        Color:
            rgba: 24,24,24,1

    id: collection
    orientation: 'vertical'
    padding: 15

    ## add entry main label
    Label:
        size_hint: 1, None
        size: collection.width, collection.height * 0.08
        halign: 'center'
        text: 'All tasks'
        font_size: '23sp'


    BoxLayout:
        height: "40dp"
        size_hint_y: None

        TextInput:
            id: search_box
            size_hint_x: 75

        Button:
            text: "Search"
            size_hint_x: 25
            background_color: C('#848484')
            on_press:
            on_press: root.search_entry(search_box.text)

    Label:
        text: root.search_entry(search_box.text)
        size: collection.width, collection.height * 0.3


    # ScrollView of all the entries (displayed as button)
    ScrollView:
        GridLayout:
            id: entries
            cols: 1
            size_hint_y: None
            height: self.minimum_height
            padding: 5, 20
            spacing: 10

            Button:
                id: button1
                background_color: C('#47b475')
                size: collection.width, collection.height * 0.1
                # size_hint: (1, None)
                text: "Feb 29"
                font_size: '30sp'
                on_release: app.load_window("update_entry")

            Button:
                id: button2
                background_color: C('#ff6d00')
                # size: collection.width, collection.height * 0.1
                text: "Feb 28"
                font_size: '30sp'
                on_release: app.load_window("#update_entry")

            Button:
                id: button3
                background_color: C('#b03060')
                # size: collection.width, collection.height * 0.1
                text: "Feb 27"
                font_size: '30sp'
                on_release: app.load_window("update_entry")

    Button:
        background_normal: 'normal.png'
        background_down: 'down.png'
        border: 30,30,30,30
        background_color: C('#808080')
        size_hint: 1, None
        size: collection.width * 0.5, collection.height * 0.05
        halign: 'center'
        text: 'Back'
        font_size: '30sp'
        on_release: app.load_window("journal_menu")
