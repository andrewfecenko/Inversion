#:kivy 1.9.1
#:import C kivy.utils.get_color_from_hex
#:import label kivy.uix.label

<UpdateEntry@BoxLayout>:

	id: view_entry
	orientation: 'vertical'

    Button:
        background_color: C('#3B3B3B')
        size_hint: 1, None
        size: root.width, root.height * 0.05
        halign: 'center'
        text: 'Back'
        font_size: '30sp'
        on_release: app.load_window("journal_menu")

    Label:
        id: header
        size_hint: 1, None
        size: root.width, root.height * 0.05
        pos: self.pos
        font_size: '20sp'

    Label:
        id: failure_points
        size_hint: 1, None
        size: root.width, root.height * 0.05
        pos: self.pos
        font_size: '15sp'

    Accordion:
        id: container
        size_hint: 1, None
        size: root.width, root.height * 0.85
        orientation: 'vertical'
        pos: self.pos



