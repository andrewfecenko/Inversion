<UpdateEntry>:

	id: view_entry

	orientation: 'vertical'
    size: root.width, root.height

    Button:
        background_color: C('#3498db')
        size_hint: 1, None
        size: root.width, root.height * 0.01
        halign: 'center'
        text: 'Back'
        font_size: '30sp'
        on_release: app.load_window("journal_menu")


