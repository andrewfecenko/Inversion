#:kivy 1.9.1
#:import C kivy.utils.get_color_from_hex
#:import label kivy.uix.label

<DetailedData@ScrollView>:
    id: detailed_data
    size: self.size

    GridLayout:
        id: detail_container
        cols: 1
        size_hint: 1, None
        height: self.minimum_height


<Detail@BoxLayout>:
    id: detail
    valign: 'middle'
    spacing: 0
    pos_hint: { 'center_x' : 0.5 }
    size_hint: 0.8, None
    height: 30
    padding: [20, 0, 20, 0]
    # canvas:
    #    Color:
    #        rgba: 0.5, 0.5, 0.5, 1
    #    Rectangle:
    #        pos: self.pos
    #        size: self.size

    Label:
        id: content
        color: C("#FFFFFF")
        size_hint: 0.8, None
        height: 30
        text_size: self.size
        halign: "left"
        font_size: '20sp'

    Button:
        id: update_btn
        background_color: C("#000000")
        color: C("#FFFFFF")
        text:
            ('[font=Modern Pictograms][size=30]'
            'R[/size][/font]')
        size_hint: 0.1, None
        height: 30

    Button:
        id: delete_btn
        background_color: C("#000000")
        color: C("#FFFFFF")
        text:
            ('[font=Modern Pictograms][size=30]'
            'X[/size][/font]')
        size_hint: 0.1, None
        height: 30
        on_release: detail.delete_data()

<Form@BoxLayout>:
    id: form
    size_hint: 0.9, 1
    height: 30
    pos_hint: { 'center_x' : .5 }
    padding: [20, 20, 20, 20]

    TextInput:
        id: input_field
        size_hint: 0.9, None
        font_size: '15sp'
        foreground_color: C('#FFFFFF')
        background_color: C('#303030')
        height: 30

    Button:
        text:
            ('[font=Modern Pictograms][size=30]'
            '+[/size][/font]')
        size_hint: 0.1, None
        font_size: '15sp'
        background_color: C("#000000")
        color: C("#00D904")
        height: 30
        on_release: form.submit_form()

<UpdateEntry@BoxLayout>:

	id: view_entry
	orientation: 'vertical'
	padding: 15

    Label:
        id: header
        size_hint: 1, None
        size: root.width, root.height * 0.1
        pos: self.pos
        font_size: '25sp'

    Accordion:
        id: container
        size_hint: 1, None
        size: root.width, root.height * 0.85
        orientation: 'vertical'
        pos: self.pos


    Button:
        background_color: C('#3B3B3B')
        size_hint: 1, None
        size: root.width, root.height * 0.05
        halign: 'center'
        text: 'Back'
        font_size: '30sp'
        on_release: app.load_window("journal_menu")



