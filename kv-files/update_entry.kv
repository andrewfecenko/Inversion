#:kivy 1.9.1
#:import C kivy.utils.get_color_from_hex
#:import label kivy.uix.label

<DetailedData@ScrollView>:
    size: self.size
    pos_hint: { 'center_x' : .5}

    GridLayout:
        id: detailed_data
        cols: 1
        size_hint: 0.9, None
        pos_hint: { 'center_x' : .5}
        height: self.minimum_height
        row_force_default: True
        row_default_height: 0.5


<Detail@BoxLayout>:
    id: detail
    size_hint: 1, 0.01

#    canvas:
#        Color:
#            rgba: 0.5, 0.5, 0.5, 1
#        Rectangle:
#            pos: self.pos
#            size: self.size

    Label:
        id: content
        size_hint: 0.8, None
        height: 30
        text_size: self.size
        halign: "left"
        font_size: '20sp'

    Button:
        background_color: C("#000000")
        color: C("#FFFFFF")
        text:
            ('[font=Modern Pictograms][size=20]'
            'R[/size][/font]')
        size_hint: 0.1, None
        height: 30
        font_size: '15sp'

    Button:
        background_color: C("#000000")
        color: C("#FFFFFF")
        text:
            ('[font=Modern Pictograms][size=20]'
            'X[/size][/font]')
        size_hint: 0.1, None
        height: 30
        font_size: '15sp'

<Form@BoxLayout>:
    id: form
    size_hint: 0.9, 1
    height: 30
    pos_hint: { 'center_x' : .5 }

    TextInput:
        size_hint: 0.8, None
        font_size: '15sp'
        foreground_color: C('#FFFFFF')
        background_color: C('#303030')
        height: 30

    Button:
        text:
            ('[font=Modern Pictograms][size=30]'
            '+[/size][/font]')
        size_hint: 0.2, None
        font_size: '15sp'
        background_color: C("#000000")
        color: C("#00D904")
        height: 30
        on_release: detailed_data.submit_form()

<UpdateEntry@BoxLayout>:

	id: view_entry
	orientation: 'vertical'

    Button:
        background_color: C('#3B3B3B')
        size_hint: 1, None
        size: root.width, root.height * 0.05
        halign: 'center'
        text: 'Back'
        font_size: '30sp'
        on_release: app.load_window("journal_menu")

    Label:
        id: header
        size_hint: 1, None
        size: root.width, root.height * 0.05
        pos: self.pos
        font_size: '20sp'

    Accordion:
        id: container
        size_hint: 1, None
        size: root.width, root.height * 0.85
        orientation: 'vertical'
        pos: self.pos



