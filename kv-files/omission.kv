#:kivy 1.9.1
#:import C kivy.utils.get_color_from_hex

<OmOption>:
    size_hint_y: None
    height: '48dp'
    background_color: C('#669999') # drop down background
    font_name: "Quicksand"
    color: C('#857887')
    padding: (5, 5)

<Omission>:
    id: omission
    orientation: 'vertical'
    size_hint: 1, 1

    canvas.before:
        Color:
            rgba: 66/255.0, 60/255.0, 68/255.0, 1 # main color
        Rectangle:
            pos: self.pos
            size: self.size
    Label:
        size_hint: 1, 0.15
        pos_hint_y: 0
        font_name: "Quicksand"
        font_size: '36sp'
        halign: 'center'
        text: 'Omission Mistakes'
        bold: False
        color: C('#9d939f') # top letters

    # Input area
    BoxLayout:
        id: form
        size_hint: 1, 0.099
        orientation: 'horizontal'
        padding: '5sp'

        Button:
            id: verb
            text: 'Did not'
            size_hint: 0.35, 1
            font_name: "Quicksand"
            bold: True
            halign: 'center'
            color: C('#857887')
            background_color: C('#669999') # drop down main button
        TextInput:
            id: noun
            size_hint: 0.35, 1
            hint_text: 'What'
            halign: 'center'
            font_name: 'SourceSansPro'
            font_size: '20sp'
            multiline: False
            foreground_color: C('#5D535E')
            background_color: C('#FFFFFF')
        TextInput:
            id: cost
            size_hint: 0.2, 1
            hint_text: '$$$'
            halign: 'center'
            font_name: "SourceSansPro"
            font_size: '20sp'
            multiline: False
            foreground_color: C('#5D535E')
            background_color: C('#FFFFFF')
        Button:
            id: submit
            size_hint: 0.1, 1
            text:
                ('[font=Modern Pictograms][size=30]'
                '/[/size][/font]')
            background_color: C('#FF7D7D')
            on_release: omission.submit_form()

    ScrollView:
        id: scroll_view
        size_hint: 1, 1
        size: self.size
        pos_hint_y: 0

        GridLayout:
            id: mistakes
            size_hint_y: None
            cols: 1
            row_default_height: '48sp'
            spacing: '5sp'
            height: self.minimum_height

    BoxLayout:
        id: add_verb
        size_hint: 1, 0.09
        orientation: 'horizontal'
        padding: '5sp'

        TextInput:
            id: new_verb
            size_hint: 0.7, 1
            hint_text: 'New verb'
            halign: 'center'
            font_size: "SourceSansPro"
            font_size: '20sp'
            multiline: False
            foreground_color: C('#5D535E')
            background_color: C('#FFFFFF')
        Button:
            id: add_verb_btn
            size_hint: 0.3, 1
            text:
                ('[font=Modern Pictograms][size=30]'
                '+[/size][/font]')
            background_color: C('#FF7D7D')
            on_release: omission.add_verb()

    GridLayout:
        id: menu
        cols: 4
        rows: 1
        size_hint: 1, None
        size: root.width, root.height * 0.10

        BoxLayout:
            padding: ['2sp', 0, 0, '2sp']
#            [padding_left, padding_top, padding_right, padding_bottom]
            Button:
                id: Main
                text: "[font=Quicksand]Main[/font]"
                font_size: '20sp'
                background_color: C('#669999')
                on_release: app.load_window('home')
        BoxLayout:
            padding: ['2sp', 0, 0, '2sp']
            Button:
                id: List
                text: "[font=Quicksand]Archive[/font]"
                font_size: '20sp'
                background_color: C('#5D535E')
                on_release: app.load_window('archive')
        BoxLayout:
            padding: ['2sp', 0, 0, '2sp']
            Button:
                id: Stat
                text: "[font=Quicksand]Stat[/font]"
                font_size: '20sp'
                background_color: C('#5D535E')
                on_release: app.load_window('stats')

<OmMistake>:
    id: mistake
    size_hint: 1, 0.07
    orientation: 'horizontal'
    padding: 5
    cols: 4
    rows: 1

    Label:
        id: verb
        size_hint: 0.35, 1
        halign: 'left'
        font_name: "Quicksand"
        font_size: '20sp'
        color: C('#c2bbc3')
        canvas.before:
            Color:
                rgba: C('#5D535E') # list view verb
            Rectangle:
                pos: self.pos
                size: self.size
    Button:
        id: noun
        size_hint: 0.35, 1
        halign: 'left'
        font_name: "SourceSansPro"
        font_size: '20sp'
        color: C('#c2bbc3')
        background_color: C('#5D535E') # list view noun
        on_press: mistake.edit_noun()

    Button:
        id: cost
        size_hint: 0.2, 1
        halign: 'left'
        font_name: "SourceSansPro"
        font_size: '20sp'
        color: C('#c2bbc3')
        background_color: C('#5D535E') # list view cost
        on_press: mistake.edit_cost()

    Button:
        id: rm
        size_hint: 0.1, 1
        text:
            ('[font=Modern Pictograms][size=30]'
            'X[/size][/font]')
        color: C('#c2bbc3')
        background_color: C('#5D535E') # list view delete button
        on_release: mistake.remove_mistake()

<EditForm>:
    id: noun
#    size_hint: 0.35, 1
    hint_text: 'What'
    halign: 'center'
    font_name: "SourceSansPro"
    font_size: '20sp'
    multiline: False
    foreground_color: C('#5D535E')
    background_color: C('#FFFFFF')
    on_touch_down: self.update_mistake()
