#:kivy 1.9.1
#:import C kivy.utils.get_color_from_hex

<Option@Button>:
    text: 'Verb1'
    size_hint_y: None
    height: '48dp'
    background_color: C('#F6F6F6')
    color:C('#65E1D4')
    on_release: dropdown.select('First Item')

<Omission>:
    id: journal
    orientation: 'vertical'
    size_hint: 1, 1

    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        id: input_field
        orientation: 'horizontal'
        size_hint: 1, 0.06
        padding: 5

        Button:
            id: noun
            text: 'Omitted'
            on_release: dropdown.open(self)
            size_hint: 0.35, 1
            halign: 'center'
            color: C('#878787')
            background_color: C('#F6F6F6')

            DropDown:
                id: dropdown
                on_parent: self.dismiss()
                on_select: btn.text = '{}'.format(args[1])


