#:kivy 1.9.1
#:import C kivy.utils.get_color_from_hex

<Archive>:
    id: journal
    orientation: 'vertical'
    size_hint: 1, 1

    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    Label:
        size_hint: 1, 0.2
        post_hint_y: 0
        font_size: 40
        halign: 'center'
        text: 'Mistakes Archive'
        color: C('#53F0BC')

    ScrollView:
        id: mistake_scroll
        size_hint: 1, 0.7 
        Label:
            size_hint: 1, 0.2
            post_hint_y: 0
            font_size: 40
            halign: 'center'
            text: 'Mistakes Archive'
            color: C('#53F0BC')


    GridLayout:
        id: menu
        cols: 4
        rows: 1
        size_hint: 1, 0.05

        BoxLayout:
            padding: [2, 0, 0, 2]
#            [padding_left, padding_top, padding_right, padding_bottom]
            Button:
                id: Main
                text: "Main"
                background_color: C('#818181')
                on_release: app.load_window('home')
        BoxLayout:
            padding: [2, 0, 2, 2]
            Button:
                id: List
                text: "Archive"
                background_color: C('#818181')
                on_release: app.load_window('archive')
        BoxLayout:
            padding: [0, 0, 2, 2]
            Button:
                id: Stat
                text: "Stat"
                background_color: C('#818181')
                on_release: app.load_window('omission')
