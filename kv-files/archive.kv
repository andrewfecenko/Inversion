#:kivy 1.9.1
#:import C kivy.utils.get_color_from_hex
<SearchInput@BoxLayout>:
    id: searchInput
    search_text: self.ids.search_text.text
    orientation:'horizontal'
    valign: 'top'
    size_hint: 1, 1

    canvas.before:
        Color:
            rgba: 66/255.0, 60/255.0, 68/255.0, 1 # main color
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'horizontal'
        padding: ["2sp", "2sp", "2sp", 0]
        pos_hint_y: 1

        TextInput:
            id: search_text
            size_hint: 0.6, 1
            font_size: '20sp'
            multiline: True
            foreground_color: C('#52B2A8')
            background_color: C('#FFFFFF')
            padding: [5, 5]

        Button:
            background_color: C('#818181')
            size_hint: 0.2, 1
            font_size: '20sp'
            text: 'Verb'
            on_release: searchInput.verb_search()

        Button:
            background_color: C('#818181')
            size_hint: 0.2, 1
            font_size: '20sp'
            text: 'Noun'
            on_release: searchInput.noun_search()



<Entry@BoxLayout>:
    id: entry
	orientation:'vertical'
    valign: 'top'
    size_hint: (1, None)

    canvas.before:
        Color:
            rgba: 55/255.0, 50/255.0, 58/255.0, 1 # main color
        Rectangle:
            pos: self.pos
            size: self.size

#    Label:
#        size_hint: 1, 1
#        font_size: '30sp'
#        markup: True
#        text: '[b]'+ entry.time + '[/b]'

    BoxLayout:
        orientation: 'horizontal'
        size_hint: 1, 1
        color: C('#423C44')

        Label:
            size_hint: 3, 1
            font_size: '20sp'
            markup: True
            font_name: 'Quicksand'
            color: C('#c2bbc3')
            text: entry.verb

        Label:
            size_hint: 3, 1
            font_size: '20sp'
            markup: True
            color: C('#c2bbc3')
            font_name: 'SourceSansPro'
            text: entry.name

        Label:
            size_hint: 1, 1
            font_size: '20sp'
            markup: True
            color: C('#ED5752')
            font_name: 'SourceSansPro'
            text: '[b]$'+ entry.cost + '[/b]'




