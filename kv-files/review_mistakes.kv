#:kivy 1.9.1
#:import C kivy.utils.get_color_from_hex

<ReviewMistakes>:

	id: review_mistakes
	orientation: 'vertical'
    padding: 15

    ## add entry main label
    Label:
    	size_hint: 1, None
    	size: review_mistakes.width, review_mistakes.height * 0.15
    	halign: 'center'
        text: 'Review Mistakes'
        font_size: '30sp'

    BoxLayout:
        id: mistakes
        orientation: 'vertical'
        spacing: 2
        font_size: '20sp'
    Button:
    	background_color: C('#3498db')
    	size_hint: 1, None
    	size: review_mistakes.width, review_mistakes.height * 0.08
    	halign: 'center'
        text: 'Back'
        font_size: '30sp'
        on_release: app.load_window('journal_menu')
