#:kivy 1.9.1
#:import C kivy.utils.get_color_from_hex

<Button>:
    background_normal: 'images/button_normal.png'
    background_down: 'images/button_down.png'
    font_size: 20
    halign: 'center'
    markup: True

     
<Journal>:
    id: journal
    orientation: 'vertical'
    size_hint: 1, 1

    canvas.before:
        Color:
            rgba: 66/255.0, 60/255.0, 68/255.0, 1 # main color
        Rectangle:
            pos: self.pos
            size: self.size
    Label:
        size_hint: 1, 0.15
        pos_hint_y: 0
        font_size: 40
        halign: 'center'
        text: 'You Lost:'
        bold: True
        color: C('#9d939f') # top letters

    MenuCanvas:
        id: menu_canvas
        size_hint: 1, 0.35
        canvas:
            Color:
                rgba: 93/255.0, 83/255.0, 94/255.0, 1 # canvas color
            Rectangle:
                pos: self.pos
                size: self.size
            Color: 
                rgba: 161/255.0, 214/255.0, 226/255.0, 0.5 # circle color
            Line:
                group: 'circle'
                width: 5 
                circle: (self.center_x, self.center_y, (min(self.width, self.height) / 2) - 20, journal.start_angle, journal.end_angle)

        Label:
            id: opportunity_cost
            pos: self.size
            size: self.size
            font_size: 80 
            halign: 'center'
            text: 'replace'
            color: C('#c2bbc3') # cost color

    GridLayout:
        size_hint: 1, 0.15
        cols: 1
        rows: 1
        padding: 10

    GridLayout:
        size_hint: 1, 0.25
        cols: 2
        rows: 1
        padding: 15

        BoxLayout:
            padding: [40, 0, 20, 40]
            Button:
                id: commission
                size_hint: 1, 1
                text:
                    ('[font=Modern Pictograms][size=60]'
                    '-[/size][/font]\nCommission')
                background_color: C('#f3bec7') # commission button
                on_release: app.load_window('commission')

        BoxLayout:
            padding: [20, 0, 40, 40]
            Button:
                id: omission
                size_hint: 1, 1
                text:
                    ('[font=Modern Pictograms][size=60]'
                    '/[/size][/font]\nOmission')
                background_color: C('#e4e67f') # omission button
                on_release: app.load_window('omission')

    GridLayout:
        id: menu
        cols: 4
        rows: 1
        size_hint: 1, None
        size: root.width, root.height * 0.10

        BoxLayout:
            padding: [2, 0, 0, 2]
#            [padding_left, padding_top, padding_right, padding_bottom]
            Button:
                id: Main
                text: "Main"
                background_color: C('#EC96A4') # bottom menu1
        BoxLayout:
            padding: [2, 0, 2, 2]
            Button:
                id: List
                text: "Archive"
                background_color: C('#DFE166') # buttom menu2
                on_release: app.load_window('archive')
        BoxLayout:
            padding: [0, 0, 2, 2]
            Button:
                id: Stat
                text: "Stat"
                background_color: C('#75B1A9') # buttom menu3
