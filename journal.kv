#:kivy 1.9.1
#:import C kivy.utils.get_color_from_hex

<Button>:
    background_normal: 'images/button_normal.png'
    background_down: 'images/button_down.png'
    font_size: '20sp'
    halign: 'center'
    markup: True

     
<Journal>:
    id: journal
    orientation: 'vertical'
    size_hint: 1, 1

    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    Label:
        size_hint: 1, 0.15
        pos_hint_y: 0
        font_size: '40sp'
        halign: 'center'
        text: 'Your cost:'
        color: C('#4E2F2F')

    MenuCanvas:
        id: menu_canvas
        size_hint: 1, 0.35
        canvas:
            Color:
                rgba: (0, 0.7, 0.8, 1)
            Rectangle:
                pos: self.pos
                size: self.size
            Color: 
                rgba: (0, 1, 0, 1)
            Line:
                group: 'circle'
                width: 5 
                circle: (self.center_x, self.center_y, (min(self.width, self.height) / 2) - 20, journal.start_angle, journal.end_angle)

        Label:
            id: opportunity_cost
            pos: self.size
            size: self.size
            font_size: '80sp'
            halign: 'center'
            text: 'replace'
            color: C('#4E2F2F')

    GridLayout:
        size_hint: 1, 0.35
        cols: 2
        rows: 1
        padding: '15sp'

        BoxLayout:
            padding: ['40sp', 0, '20sp', '40sp']
            Button:
                id: commission
                size_hint: 1, 1
                text:
                    ('[font=Modern Pictograms][size=60]'
                    '-[/size][/font]\nCommission')
                background_color: C('#FF7D7D')
                on_release: app.load_window('commission')

        BoxLayout:
            padding: ['20sp', 0, '40sp', '40sp']
            Button:
                id: omission
                size_hint: 1, 1
                text:
                    ('[font=Modern Pictograms][size=60]'
                    '/[/size][/font]\nOmission')
                background_color: C('#7DB1FF')
                on_release: app.load_window('omission')

    GridLayout:
        id: menu
        cols: 4
        rows: 1
        size_hint: 1, None
        size: root.width, root.height * 0.05

        BoxLayout:
            padding: ['2sp', 0, 0, '2sp']
#            [padding_left, padding_top, padding_right, padding_bottom]
            Button:
                id: Main
                font_size: '20sp'
                text: "Main"
                background_color: C('#6BCDC3')
        BoxLayout:
            padding: ['2sp', 0, '2sp', '2sp']
            Button:
                id: List
                font_size: '20sp'
                text: "Archive"
                background_color: C('#818181')
                on_release: app.load_window('archive')
        BoxLayout:
            padding: [0, 0, '2sp', '2sp']
            Button:
                id: Stat
                font_size: '20sp'
                text: "Stat"
                background_color: C('#818181')
