#:kivy 1.9.1
#:import C kivy.utils.get_color_from_hex

<GridLayout>:
    cols: 2
    spacing: 10
    row_default_height: (0.5 * (self.width - self.spacing[0]) - self.padding[0])
    row_force_default: True

<Button>:
    background_normal: 'images/button_normal.png'
    background_down: 'images/button_down.png'
    font_size: 24
    halign: 'center'
    markup: True

<Journal>:

    id: journal
    padding: 15

    Button:
        id: enter_tasks
        background_color: C('#3498db')
        text:
            ('[font=Modern Pictograms][size=120]'
            'e[/size][/font]\nEnter tasks')
        on_release: app.load_window("enter_tasks")

    GridLayout:
        Button:
            background_color: C('#2ecc71')
            text: '[font=Modern Pictograms][size=80]B[/size][/font]\nCollection'

        Button:
            background_color: C('#1abc9c')
            text: '[font=Modern Pictograms][size=80]([/size][/font]\nSettings'

        Button:
            id: lock
            background_color: C('#27ae60')
            text: journal.locked_text
            on_release: journal.unlock_lock()

        Button:
            background_color: C('#16a085')
            text: '[font=Modern Pictograms][size=80]j[/size][/font]\nFavorites'

    Button:
        background_color: C('#95a5a6')
        text: '[font=Modern Pictograms][size=120]4[/size][/font]\nUpdate day'
        on_release: app.load_window("update_entry")

    Button:
        background_color: C('#e74c3c')
        text: '[font=Modern Pictograms][size=120]X[/size][/font]\nReview Mistakes'
        on_release: app.load_window("review_mistakes")
